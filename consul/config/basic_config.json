{
  "datacenter": "{{cfg.server.datacenter}}",
  "data_dir": "{{cfg.server.data-dir}}",
  "log_level": "{{cfg.server.loglevel}}",{{#if cfg.local_client}}
  "bind_addr": "{{sys.ip}}",
  "client_addr": "127.0.0.1",{{else}}
  "bind_addr": "{{sys.ip}}",
  "client_addr": "{{sys.ip}}",{{/if}}
  "server": {{cfg.server.mode}},
  "retry_join": [
  {{#if bind.leaders.members}}
    {{#eachAlive bind.leaders.members as |leaders| ~}}
    "{{leaders.sys.ip}}" {{~#unless @last}},{{/unless}}
    {{/eachAlive ~}}{{else}}{{#eachAlive svc.members as |member| ~}}
    "{{member.sys.ip}}" {{~#unless @last}},{{/unless}}
    {{/eachAlive ~}}
  {{/if}}],
  "ports": {
    "dns": {{cfg.ports.dns}},
    "http": {{cfg.ports.http}},
    "https": {{cfg.ports.https}},
    "serf_lan": {{cfg.ports.serf_lan}},
    "serf_wan": {{cfg.ports.serf_wan}},
    "server": {{cfg.ports.server}}
  }
}
